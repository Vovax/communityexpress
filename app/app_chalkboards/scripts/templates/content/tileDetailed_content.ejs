<div id="cmntyex_tile_detailed" data-role="page" class="page">
    <div class="sprite_navbar back_small back"></div>
    <div data-role="content" class="content">
        <div class="cmntyex-tiles_placeholder">
            <div class="cmntyex-content_placeholder">
            	<a href="#" >
                    <div class="cmntyex_sasl_tile">
                        <div class="tile_left">
                            <h2 class="tile_type"><%= tile.tileType.displayText %></h2>
                            <img class="tile_image" src="<%= tile.tileURL %>" >
                        </div>
                        <div class="tile_right">
                            <h2 class="tile_title"><%= tile.tileTitle %></h2>
                            <p class="tile_message"><%= tile.tileMessage %></p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
    <div class="driveCallBlock">
        <div class="shareButtons">
            <div id="tileviewdetails_callbutton">
                <a href="">
                    <div class="sprite_navbar button12_60_0_0"></div>
                </a>
            </div>
            <div id="tileviewdetails_drivebutton">
                <a href="https://maps.apple.com/?daddr=4242424242424242+Huntingdon+DR+Sanjose+CA+&saddr=current%20location" target="_blank">
                    <div class="sprite_navbar button12_28_0_0"></div>
                </a>
            </div>
        </div>
    </div>
    <div class="shareBlock">
        <div>
            <div>Share</div>
            <div id="sms_input_block" style="display: none;">
                <input class="phone_us" type="tel" id="sms_input" name="sms_input" placeholder="(US mobile)" value="" size="14" maxlength="128">
                <span id="sms_send_button">Send</span>
            </div>
            <div class="shareButtons">
                <div id="tileviewdetails_twitterbutton">
                    <a href="https://twitter.com/intent/tweet?text=<%= window.encodeURIComponent(window.community.protocol + window.community.host + '/' + restaurant.anchorURL.friendlyURL + '?t='+ tile.tileUUIDtype + '&u=' + tile.tileUUID) %>" target="_blank">
                        <div class="sprite_navbar navbutton_twitter"></div>
                    </a>
                </div>
                <div id="tileviewdetails_smsbutton">
                    <a href="" class="mobile_button">
                        <div class="sprite_navbar navbutton_sms_button"></div>
                    </a>
                </div>
                <div id="tileviewdetails_facebookbutton">
                    <a href="https://www.facebook.com/sharer/sharer.php?u=<%= window.encodeURIComponent(window.community.protocol + window.community.host + '/' + restaurant.anchorURL.friendlyURL + '?t='+ tile.tileUUIDtype + '&u=' + tile.tileUUID) %>" target="_blank">
                        <div class="sprite_navbar navbutton_facebook"></div>
                    </a>
                </div>
                <div id="tileviewdetails_emailbutton">
                    <a href="mailto:?subject=&body=<%= window.encodeURIComponent(window.location.href + '?t=p&u=' + tile.tileUUID) %>">
                        <div class="sprite_navbar navbutton_email"></div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
