  <section>
    <div class="pree_question_text pree_question_text">
      <%= displayText %>
    </div>
    <div class="pree_question_answer pree_question_answer_a">
      <input type="checkbox"> Yes
    </div>
    <div class="pree_question_answer pree_question_answer_b">
      <input type="checkbox"> No
    </div>
    <div class="pree_question_answer pree_question_answer_c">
      <input type="checkbox"> Not sure
